  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Main",
      "request": "launch",
      "mainClass": "telran.monitoring.Main",
      "projectName": "pulse-values-imitator"
    },
    {
      "type": "java",
      "name": "Main",
      "request": "launch",
      "mainClass": "telran.monitoring.Main",
      "projectName": "pulse-values-receiver"
    },
   
    
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "pulse_monitoring:PulseValuesReducerFunction (java21)",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/template.yaml",
        "logicalId": "PulseValuesReducerFunction"
      },
      "lambda": {
        "payload": {
          "path": "${workspaceFolder}/events/pulse_values.json"
        },
        "environmentVariables": {
          "LOGGER_LEVEL": "finest",
          "STREAM_NAME": "average-pulse-values",
          "REDUCING_SIZE": "2",
          "REDUCING_TIME_WINDOW": "60000000000000",
          "STREAM_CLASS_NAME": "telran.monitoring.TestStream",
          "LATEST_VALUES_SAVER_CLASS_NAME": "telran.monitoring.LatestValuesSaverMap"
        }
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "pulse_monitoring:ReducedValuesSaverFunction (java21)",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/template.yaml",
        "logicalId": "ReducedValuesSaverFunction"
      },
      "lambda": {
        "payload": {
          "path": "${workspaceFolder}/events/pulse_values.json"
        },
        "environmentVariables": {
          "LOGGER_LEVEL": "finest",
          "DB_PASSWORD":"12345.com"
        }
      }
    },
    
  ]
}
